        <style>
            .avatar-container {
                display: flex;
                justify-content: center; /* Center horizontally */
                align-items: center; /* Center vertically */
                height: 200px; /* Adjust height as needed */
            }

            .avatar-label {
                display: block;
                position: relative;
                width: 150px; /* Adjust width of the avatar */
                height: 150px; /* Adjust height of the avatar */
                overflow: hidden;
                border-radius: 50%; /* Ensures the avatar is circular */
            }

                .avatar-label img {
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                }

            .visually-hidden {
                position: absolute;
                width: 1px;
                height: 1px;
                padding: 0;
                margin: -1px;
                overflow: hidden;
                clip: rect(0, 0, 0, 0);
                border: 0;
            }

        </style>

        <script>
            // Preview avatar when selected
            function loadAvatar(event) {
                var reader = new FileReader();
                reader.onload = function () {
                    $('#avatar-preview').attr('src', reader.result);
                };
                reader.readAsDataURL(event.target.files[0]);
                // Show the avatar preview after selecting an image
                $('#avatar-preview').show();
            }
        </script>
