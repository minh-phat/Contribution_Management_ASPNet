@model SchoolProject1640.Models.ApplicationUser

@{
    ViewData["Title"] = "PersonalPage";
}

<style>
    .avatar-container {
        display: flex;
        justify-content: center; /* Center horizontally */
        align-items: center; /* Center vertically */
        height: 200px; /* Adjust height as needed */
    }

    .avatar-label {
        display: block;
        position: relative;
        width: 150px; /* Adjust width of the avatar */
        height: 150px; /* Adjust height of the avatar */
        overflow: hidden;
        border-radius: 50%; /* Ensures the avatar is circular */
    }

        .avatar-label img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .visually-hidden {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        border: 0;
    }
</style>

<div class="">
    <div class="px-16 py-8 w-full h-[900px] flex text-black  sm:px-0">
        <div class="w-full h-full bg-[#EBDFD7] py-5 px-3  sm:px-0">
            <div class="w-full h-[90%] ">
                <div class="w-full flex items-center justify-center py-10 ">
                    <div class="flex flex-col items-center justify-center space-y-7 bg-[#F2EAE5] px-10 py-10 rounded-2xl sm:px-14">
                        <div class="">
                            <label class="avatar-label">
                                <img id="avatar-preview" src="/imageUser/@Model.Image" alt="Avatar">
                            </label>
                        </div>
                        <div class="form-floating mb-3"></div>
                        <div class="text-[16px] space-y-1 ">
                            <div class="text-[#828181]">
                                Email:
                            </div>
                            <div class="flex items-center h-[40px] w-[380px] bg-[#F1F3F6] px-5 rounded-lg  text-black">
                                @Model.Email
                            </div>
                        </div>
                        <div class="text-[16px] space-y-1 ">
                            <div class="text-[#828181]">
                                Faculty ID:
                            </div>
                            <div class="flex items-center h-[40px] w-[380px] bg-[#F1F3F6] px-5 rounded-lg  text-black">
                                @Model.FacultyId
                            </div>
                        </div>
                        <div class="text-[16px] space-y-1 ">
                            <div class="text-[#828181]">
                                First Name:
                            </div>
                            <div class="flex items-center h-[40px] w-[380px] bg-[#F1F3F6] px-5 rounded-lg  text-black">
                                @Model.FirstName
                            </div>
                        </div>
                        <div class="text-[16px] space-y-1 ">
                            <div class="text-[#828181]">
                                Last Name:
                            </div>
                            <div class="flex items-center h-[40px] w-[380px] bg-[#F1F3F6] px-5 rounded-lg  text-black">
                                @Model.LastName
                            </div>
                        </div>
                        <button type="submit" class="space-x-2 pt-3" type="submit">
                            <a class="w-[380px] text-[#FD7401] border-2 border-[#FD7401] text-[20px] font-bold rounded-[10px] h-[45px] flex items-center justify-center " asp-action="Edit" asp-route-id="@Model.Id">Edit Profile</a>
                        </button>
                        <button type="submit" class="space-x-2 pt-3" type="submit">
                            <a class="w-[380px] text-[#FD7401] border-2 border-[#FD7401] text-[20px] font-bold rounded-[10px] h-[45px] flex items-center justify-center " asp-area="Identity" asp-page="/Account/Manage/ChangePassword">Change Password</a>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
