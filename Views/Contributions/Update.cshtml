@model SchoolProject1640.Models.Contribution

@{
    ViewData["Title"] = "Edit";
}

<div class="flex justify-center">
    <div class="w-[80%] text-center py-10 sm:w-[100%] ">
        <div class="flex w-full">
            <div class="w-full text-black space-y-5">
                <div class="bg-[#F2EAE5] rounded-l-xl w-full h-[800px] space-y-4 2xl: lg: sm:rounded-t-lg sm:h-[800px]">
                    <div class="w-full h-[800px] flex 2xl: lg: sm:flex-col sm:h-[700px]">
                        <div class="w-[25%] h-[800px] text-left bg-[#474341] rounded-l-xl flex items-center justify-center 2xl: lg: sm:w-full sm:rounded-lg sm:h-[200px]">
                            <div class="-rotate-90 text-white font-bold text-[60px] 2xl: lg: sm:rotate-0 sm:text-[50px]">
                                <div class="w-[500px] text-center">Edit Contribution</div>
                            </div>
                        </div>
                        <div class="flex items-center w-[75%] h-[800px] text-left py-10  sm:py-3 sm:w-full">

                            <form asp-action="Update" asp-controller="Contributions" method="post"
                                  class="w-full flex flex-col items-center space-y-4">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="text-[16px] space-y-1 sm:text-[14px]">
                                    <label asp-for="Title" class="text-black font-medium text-[18px]">Title</label>
                                    <div class="flex items-center justify-end">
                                        <input asp-for="Title" class="h-[45px] w-[600px] bg-[#B0B0B0] px-5 rounded-lg text-black placeholder-black 2xl:w-[400px] lg:w-[400px] sm:w-[350px]"
                                               type="text" />
                                    </div>
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>

                                <div class="text-[16px] space-y-1 sm:text-[14px]">
                                    <label asp-for="Faculty" class="text-black font-medium text-[18px]">
                                        Faculty
                                    </label>
                                    <div class="flex items-center justify-end">
                                        <input asp-for="Faculty" class="h-[45px] w-[600px] bg-[#B0B0B0] px-5 rounded-lg text-black placeholder-black 2xl:w-[400px] lg:w-[400px] sm:w-[350px]"
                                                type="text" />
                                            
                                            
   
                                    </div>
                                    <span asp-validation-for="Faculty" class="text-danger"></span>
                                </div>

                                <div class="text-[16px] space-y-1 sm:text-[14px]">
                                    <label asp-for="AcademicYear" class="text-black font-medium text-[18px]">AcademicYear</label>
                                    <div class="flex items-center justify-end">
                                        <input asp-for="AcademicYear" class="h-[45px] w-[600px] bg-[#B0B0B0] px-5 rounded-lg text-black placeholder-black 2xl:w-[400px] lg:w-[400px] sm:w-[350px]"
                                               type="text" />
                                    </div>
                                    <span asp-validation-for="AcademicYear" class="text-danger"></span>
                                </div>

                                <div class="text-[16px] space-y-1 sm:text-[14px]">
                                    <label asp-for="StartDate" class="text-black font-medium text-[18px]">StartDate</label>
                                    <div class="flex items-center justify-end">
                                        <input asp-for="StartDate" class="h-[45px] w-[600px] bg-[#B0B0B0] px-5 rounded-lg text-black placeholder-black 2xl:w-[400px] lg:w-[400px] sm:w-[350px]" />
                                    </div>
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>

                                <div class="text-[16px] space-y-1 sm:text-[14px]">
                                    <label asp-for="ClosureDate" class="text-black font-medium text-[18px]">Closure Date</label>
                                    <div class="flex items-center justify-end">
                                        <input asp-for="ClosureDate" class="h-[45px] w-[600px] bg-[#B0B0B0] px-5 rounded-lg text-black placeholder-black 2xl:w-[400px] lg:w-[400px] sm:w-[350px]" />
                                    </div>
                                    <span asp-validation-for="ClosureDate" class="text-danger"></span>
                                </div>

                                <div class="text-[16px] space-y-1 sm:text-[14px]">
                                    <label asp-for="FinalClosureDate" class="text-black font-medium text-[18px]">Final Closure Date</label>
                                    <div class="flex items-center justify-end">
                                        <input asp-for="FinalClosureDate" class="h-[45px] w-[600px] bg-[#B0B0B0] px-5 rounded-lg text-black placeholder-black 2xl:w-[400px] lg:w-[400px] sm:w-[350px]" />
                                    </div>
                                    <span asp-validation-for="FinalClosureDate" class="text-danger"></span>
                                </div>



                                <div class="py-3">
                                    <div class="text-[16px] space-y-1 sm:text-[14px]">
                                        <div class="h-[100px]">
                                            <button type="submit" value="Save" class="h-[45px] w-[200px] bg-[#FD7401] px-5 rounded-lg text-black placeholder-black font-medium text-[15px] space-x-2 flex items-center justify-center 2xl:">
                                                <div class="text-white font-bold text-[20px]">
                                                    Submit
                                                </div>
                                            </button>
                                        </div>
                                    </div>
                                </div>


                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
